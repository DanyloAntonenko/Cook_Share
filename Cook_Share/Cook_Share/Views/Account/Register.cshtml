@model Cook_Share.ViewModels.RegisterModel



    <link rel="stylesheet" href="../css/style.css" />

    <div class="container">

        <div class="authorized">
            <div class="wrap__aut log">
                <img src="../img/bg-registration.jpg" alt="" class="wrap__bg__aut">
                <span class="wrap__sign__in">Регистрация</span>
            </div>

            <div class="wrap__content">
                <form class="aut__form log" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                    <div class="validation" asp-validation-summary="ModelOnly" />
                    <div class="wrap__label">
                        <span class="label__log usen" asp-for="Name">Имя</span>
                        <input asp-for="Name" type="text" placeholder="Enter username" class="log__input usen" autocomplete=" off">
                        <span asp-validation-for="Name" />
                    </div>

                    <div class="wrap__label">
                        <span class="label__log usen" asp-for="Email">E-mail</span>
                        <input asp-for="Email" type="text" placeholder="Enter username" class="log__input usen" autocomplete=" off">
                        <span asp-validation-for="Email" />
                    </div>

                    <div class="wrap__label">
                        <span asp-for="Password" class="label__log passn">Пароль</span>
                        <input asp-for="Password" type="password" placeholder="Enter password" class="log__input passn">
                        <span asp-validation-for="Password" />
                    </div>

                    <div class="wrap__label">
                        <span asp-for="ConfirmPassword" class="label__log passn">Пароль</span>
                        <input asp-for="ConfirmPassword" type="password" placeholder="Enter password" class="log__input passn">
                        <span asp-validation-for="ConfirmPassword" />
                    </div>

                    <a href="../html/autorization.html" class="link__reg">Уже зарегистрированы?</a>
                    <div class="btn__log">
                        <input type="submit" name="login" value="Регистрация" class="inp__btn--log">
                    </div>
                </form>
            </div>
        </div>

    </div>
