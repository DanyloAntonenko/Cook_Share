
@{
    ViewData["Title"] = "Login";
}

@model Cook_Share.ViewModels.LoginModel



<div class="container">

    <div class="authorized">
        <div class="wrap__aut log">
            <img src="../img/bg-registration.jpg" alt="" class="wrap__bg__aut">
            <span class="wrap__sign__in">Авторизация</span>
        </div>

        <div class="wrap__content">
            <form class="aut__form log" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <span asp-validation-for="General" class="exit__errore"></span>
                <div class="wrap__label">
                    <span class="label__log usen" asp-for="Email">E-mail</span>
                    <input type="text" asp-for="Email" placeholder="Введите электронный адрес" class="log__input usen" autocomplete=" off">
                    <span asp-validation-for="Email" class="exit__errore"></span>
                </div>

                <div class="wrap__label">
                    <span class="label__log passn" asp-for="Password">Пароль</span>
                    <input asp-for="Password" type="password" placeholder="Введите пароль" class="log__input passn">
                    <span class="field-validation-error exit__errore" asp-validation-for="Password"> </span>
                </div>
                <a href="/Account/Register" class="link__reg">Регистрация</a>
                <!--
                <div class="help__aut">
                    <div>
                        <input type="checkbox" name="save" class="save__aut" disabled checked><span class="save__aut--label" >Запомнить меня</span>
                    </div>
                    <a href="#" class="forgot__pass">Забыли свой пароль?</a>
                </div>-->


                <div class="btn__log">
                    <input type="submit" name="login" value="Войти" class="inp__btn--log">
                </div>

            </form>
        </div>
    </div>

</div>
