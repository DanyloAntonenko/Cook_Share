
@{
    ViewData["Title"] = "Account";
    string str = Model.User.Photo ?? "default-user.png";
}
@*@model Cook_Share.Models.User*@
@model AccountModel
<link rel="stylesheet" href="../css/style.css" />

<div class="container">
    <header class="header"></header>
    <main>
        <div class="title__profile">
            <img src="../img/@str" alt="MyPhoto" class="profile__photo " id="addPhotoArea"/>
            <button class="profile__add " id="addPhotoBtn">Добавить фото</button>
            <span class="title__name">@Model.User.Name</span>
            <span class="title__name">&ensp;</span>
            <span class="title__name">@Model.User.Surname</span>

        </div>
        <div class="row"></div>

        <div class="profile__navigation">
            <div class="nav__left">
                <a href="#"
                   class="nav__link active"
                   onclick="addContentMyDish()">Мои блюда</a>

                    <a href="#" class="nav__link" onclick="addContentMyFavorite()">Избранное</a>
                </div>
            <div class="nav__right">
                
                <button onclick="location.href='/Account/ChangeInfo';" class="nav__button">
                    Редактирование
                </button>

                <button asp-controller="Account" asp-action="Logout"  class="nav__button">
                    Выход
                </button>
            </div>
        </div>
        <div class="row"></div>
        <div class="content">
            <div class="left__content" id="left__content">
                <div class="content__mydishes">
                    <div class="add-content__mydish">
                        @*<img src="../img/plus.png" alt="" class="photo__add" />
            <button class="button__add-dish" hidden>Добавить</button>*@
                        <a href='@Url.Action("AddDish","Account", Model.User, null)'>Добавить Блюдо</a>
                        <button onclick="location.href='/Account/AddDish';">
                            Добавить Блюдо
                        </button>
                    </div>
                    @{
                        foreach (var publication in Model.Publications)
                        {
                                        <a href='@Url.Action("Dish","Account", publication, null)'>
                                            <div class="content__mydish">

                                                <img src="../img/photo-food-1.png" alt="" class="photo__dish" />
                                                <h1>@publication.DishName</h1>
                                            </div>
                                        </a>
                        }
                    }
                </div>
            </div>
            <div class="right__content">
                <div class="subscribers li__profile">
                    Подписчики:<span class="num__content">4</span>
                </div>
                <div class="subscriptions li__profile">
                    Подписки:<span class="num__content">23</span>
                </div>
                <div class="row"></div>
            </div>
        </div>
    </main>
</div>
<script src="../js/script.js"></script>


