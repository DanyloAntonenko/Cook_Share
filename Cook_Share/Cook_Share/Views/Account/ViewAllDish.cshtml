@model IEnumerable<Cook_Share.Models.Publication>

@{
    ViewData["Title"] = "ViewAllDish";
}


<div class="title__all">Все рецепты</div>

<br /><br />
<div class="container">
    @{ foreach (var publication in Model)
        {



            <div class="dish-item-all">
                <div class="dish-left">
                        <div class="owl-carousel">
                            @{
                                if (publication.Photos.Count != 0)
                                {
                                    foreach (var photo in publication.Photos)
                                    {

                                        <div class="photo__slider">
                                            <img src="~/dish_img/@photo.Name" alt="" class="dish-photo">
                                        </div>
                                    }
                                }
                                else
                                {
                                    string dish = "default-dish.jpg";
                                    <div class="photo__slider">
                                        <img src="~/dish_img/@dish" alt="" class="dish-photo">
                                    </div>
                                }
                            }
                        </div>
                </div>

                <div class="dish-right">
                    <div class="title__dish__creator">
                        <div class="name__dish-all">@publication.DishName</div>
                        <div class="subtitle__dish">
                            <div class="name__creator name__creator__all">@publication.User.Name @publication.User.Surname</div>
                            <div class="cuisine__dish cuisine__dish__all">
                                @publication.Cuisine
                            </div>
                        </div>
                        <div class="category__dish dish__span__all"><span class="dish__span dish__span__all">Категория: </span>@publication.Category.Name</div>
                        <div class="description__dish dish__span__all">
                            <span class="dish__span dish__span__all">Описание: </span>
                            @publication.Discription
                        </div>
                        <div class="recipe__dish dish__span__all">
                            <span class="dish__span dish__span__all">Рецепт: </span>
                            <textarea class="txtArea__recipe input__item dish__span__all" disabled>@publication.Recipe</textarea>
                        </div>
                        <div class="date__creator dish__span__all"> <span class="dish__span dish__span__all">Дата добавления: </span>@publication.Time</div>
                    </div>
                    <div class="row"></div>
                </div>
            </div>

        }
    }
</div>
<script src="~/js/jquery.min.js"></script>
<link rel="stylesheet"
      href="~/css/jquery.fancybox.min.css" />
<script src="~/js/jquery.fancybox.min.js"></script>

<script src="~/js/owl.carousel.min.js"></script>
<script src="~/js/carousel.js"></script>
