@model PublicationModel

@{
    //ViewData["Title"] = "Dish";
    //Layout = "~/Views/Shared/_Layout.cshtml";


}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/style.css" />
    <title>Document</title>
</head>
<body>
    <br /><br />
    <div class="container">
        <div class="dish-item">
            <div class="dish-left">
                <div class="owl-carousel">
                    @{
                        if (Model.Photos.ToList().Count == 0)
                        {
                            <div class="photo__slider">
                                <img src="~/dish_img/default-dish.jpg" alt="" class="dish-photo">
                            </div>
                        }
                        else
                        {
                            foreach (var item in Model.Photos)
                            {
                                <div class="photo__slider">
                                    <img src="~/dish_img/@item.Name" alt="" class="dish-photo">
                                </div>
                            }
                        }
                    }
                </div>
                <button id="DeleteModal" class="delete__photo">Удалить пост</button>
            </div>



            <div class="dish-right">
                <form method="post" asp-action="Dish" asp-controller="Account" enctype="multipart/form-data">
                    <input type="number" name="id" hidden asp-for="Publication.Id" />
                    <div class="title__dish__creator">
                        <div class="name__dish">@Model.Publication.DishName</div>
                        <div class="subtitle__dish">
                            <div class="name__creator">@Model.User.Name @Model.User.Surname</div>
                            <div class="cuisine__dish">
                                <div class="valid">
                                    <input type="text" name="cuisine" class="change__input__dish" id="cuisineInput" disabled asp-for="Publication.Cuisine">

                                    <span asp-validation-for="Publication.Cuisine" class="exit__errore field-validation-error"></span>
                                </div>
                            </div>
                        </div>
                        <div class="category__dish"><span class="dish__span">Категория: </span>@Model.Category.Name</div>
                        <div class="description__dish">
                            <span class="dish__span">Описание: </span>
                            <div class="valid">
                                <input type="text" name="discription" class="change__input__dish" id="discrInput" disabled asp-for="Publication.Discription">
                                <span asp-validation-for="Publication.Discription" class="exit__errore field-validation-error"></span>

                            </div>
                        </div>
                        <div class="recipe__dish">
                            <span class="dish__span">Рецепт: </span>
                            <div class="valid">
                                <textarea class="txtArea__recipe input__item" id="recInput" name="recipe" disabled asp-for="Publication.Recipe"></textarea>
                                <span asp-validation-for="Publication.Recipe" class="exit__errore field-validation-error"></span>
                            </div>
                        </div>
                        <div class="cal__dish">
                            <span class="dish__span">Количество калорий: </span>
                            <div class="valid">
                                <input name="calVal" class="change__input__dish__cal" id="calVal" disabled asp-for="Publication.CalorificVal">
                                <span asp-validation-for="Publication.CalorificVal" class="exit__errore field-validation-error"></span>
                            </div>
                        </div>

                        <div class="date__creator"> <span class="dish__span">Дата добавления: </span>@Model.Publication.Time</div>

                    </div>

                    <input type="button" id="ChangeBtn" value="Изменить" class="nav__button" />
                    <input type="submit" id="SaveBtn" hidden value="Сохранить" class="nav__button" />
                </form>

            </div>

        </div>

        <div class="dish-item dish-item__comments">
            <h2 class="title__comments">Комментарии:</h2>
            @foreach (var comment in Model.Comments)
            {
                <div class="item__comment">
                    <a href='@Url.Action("UserPage","Account", new{id = comment.UserId})'>
                        <div class="name__creator">@comment.User.Name @comment.User.Surname</div>
                    </a>
                    <label class="text__comment">@comment.Discription</label>
                </div>
            }


            <div class="row"></div>

            <form method="post" asp-action="AddComment" asp-controller="Account">
              
                    <div class="new__comment" >

                        <input type="text" name="discription" class="input__comment" id="input__comment" placeholder="Добавить комментарий..." asp-for="Comment.Discription">
                        <span asp-validation-for="Comment.Discription" class="exit__errore field-validation-error"></span>
                        <input type="hidden" name="id" value="@Model.Publication.Id" />
                        <input type="submit" class="nav__button" id="btn__add__comment" />
                    </div>
                
            </form>
        </div>

    </div>



    <footer class="wrap__bottom">
        <div class="bottom">
            <div class="row"></div>
            <div class="footer__top">
                <div class="footer__top-item">
                    <span class="title__footer__top"><a href="#" class="footer__link">Главная</a></span>
                    <ul class="footer__list">
                        <li class="footer__list-item"><a href="#" class="footer__link">Link</a></li>
                        <li class="footer__list-item">Text</li>
                        <li class="footer__list-item">Text</li>
                    </ul>
                </div>

                <div class="footer__top-item">
                    <span class="title__footer__top"><a href="#" class="footer__link">Аккаунт</a></span>
                    <ul class="footer__list">
                        <li class="footer__list-item"><a href="#" class="footer__link">Link</a></li>
                        <li class="footer__list-item"><a href="#" class="footer__link">Link</a></li>
                        <li class="footer__list-item"><a href="#" class="footer__link">Link</a></li>
                    </ul>
                </div>

                <div class="footer__top-item">
                    <span class="title__footer__top">Навигация</span>
                    <ul class="footer__list">
                        <li class="footer__list-item">Адрес: Ukraine Kharkiv </li>
                        <br>
                        <li class="footer__list-item">Номер:<a href="#" class="link__list-item">+380958695956</a></li>
                        <br>
                        <li class="footer__list-item">E-mail.:<a href="#" class="link__list-item">info@gmail.com</a></li>
                    </ul>
                </div>
            </div>
            <div class="row"></div>
            <div class="footer__bottom">
                <div class="footer__container">
                    <div class="footer__create">MyWork s.r.o 2019.</div>
                </div>
            </div>
        </div>
    </footer>

    @*_____________________________MODAL_____________________________*@
    <div class="modal fade" id="login">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-body">
                    <div class="modal-header">
                        <h5>Удалить публикацию @Model.Publication.DishName?</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            ×
                        </button>
                    </div>
                    <form method="post" asp-controller="Account" asp-action="DeleteDish">
                        <div class="form-group">
                            <input hidden class="form-control" type="number" name="Id" id="inputUserName" asp-for="Publication.Id" />
                        </div>
                        <button type="submit" class="btn btn-primary button button4 nav__button">Удалить</button>
                        <button type="button" id="HidebtnModal" class="btn btn-primary nav__button"> Отмена </button>
                    </form>

                </div>

            </div>
        </div>
    </div>


    <script src="~/js/jquery.min.js"></script>
    <link rel="stylesheet"
          href="~/css/jquery.fancybox.min.css" />
    <script src="~/js/jquery.fancybox.min.js"></script>

    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/carousel.js"></script>
    @section scripts{
        <script type="text/javascript">


            $(document).ready(function () {


                var cuisine = document.getElementById("cuisineInput");
                var discription = document.getElementById("discrInput");
                var cal = document.getElementById("calVal");
                var change = document.getElementById("ChangeBtn");
                var changeArea = document.getElementById("recInput");
                $("#ChangeBtn").click(function () {
                    $('#discrInput').prop('disabled', false);
                    $('#recInput').prop('disabled', false);
                    $('#cuisineInput').prop('disabled', false);
                    $('#calVal').prop('disabled', false);
                    $('#SaveBtn').prop('hidden', false);

                    cuisine.style.cssText = "color:blue; border-bottom:1px solid black;"
                    discription.style.cssText = "color:blue; border-bottom:1px solid black;"
                    cal.style.cssText = "color:blue; border-bottom:1px solid black;"
                    changeArea.style.cssText = "color:blue; border:1px solid black;"
                    change.style.cssText = "display:none";
                });
            });
            $(document).ready(function () {
                $("#DeleteModal").click(function () {
                    $("#login").modal('show');
                });



                $("#HidebtnModal").click(function () {
                    $("#login").modal('hide');
                });
            });
        </script>
    }
</body>

</html>