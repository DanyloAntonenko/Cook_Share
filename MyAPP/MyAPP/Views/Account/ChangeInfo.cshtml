
@model UserInfo
@{
    ViewData["Title"] = "Изменение товара";
}
<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="ChangeInfo" asp-controller="Account">
    <div asp-validation-summary="All"></div>
    <input asp-for="Email" type="hidden" />
    <div>
        <label>Название</label>
        <div>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div>
        <label>Surname</label>
        <div>
            <input asp-for="Surname"  />
            <span asp-validation-for="Surname"></span>
        </div>
    </div>
    <div>
        <label>Age</label>
        <div>
            <input asp-for="Age" type="number" />
            <span asp-validation-for="Age"></span>
        </div>
    </div>
    <div>
        <label>Address</label>
        <div>
            <input asp-for="Address"  />
            <span asp-validation-for="Address"></span>
        </div>
    </div>
    <div>
        <label>About</label>
        <div>
            <input asp-for="About"  />
            <span asp-validation-for="About"></span>
        </div>
    </div>
    <div>
        <input type="submit" value="Сохранить" />
    </div>
</form>
